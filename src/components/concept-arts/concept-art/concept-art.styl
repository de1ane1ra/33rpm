.concept-art {
    position: relative
    width: 100%

    &__img {
        display: block
        max-width: 100%
        user-select: none
        pointer-events: none
    }
    
    &__nos {
        font-size: 1.4rem
        position: absolute
        right: -8rem
        top: 0
        text-align: right
        writing-mode: tb
        transform: rotate(180deg)
    }
    
    &__no {
        display: block
    }
    
    &__date {
        font-size: 1.4rem
        position: absolute
        right: -8rem
        bottom: 0
        writing-mode: tb
        transform: rotate(180deg)
    }
    
    &:nth-child(n + 2) {
        margin-top: 18rem
    }
}